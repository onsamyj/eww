    (box
    ; very inefficient (?) way of displaying kiloâ€“ and megaâ€“ by displaying a specific box only when the speed is within a certain range
        :orientation "vertical"

; down

        (box
        ; for bytes
            :visible { netdown <= 1024 }
            (rain-text-right
                :text "${ round( netdown / 1, 0 ) } ðŸ¡£"
            )
        )
        (box
        ; for kilo
            :visible { netdown > 1024 && netdown <= 1048576 }
            (rain-text-right
                :text "${ round( netdown / 1024, 0 ) }á´· ðŸ¡£"
            )
        )
        (box
        ; for mega
            :visible { netdown > 1048576 }
            (rain-text-right
                :text "${ round( netdown / 1048576, 0 ) }á´¹ ðŸ¡£"
            )
        )

; up

        (box
        ; for bytes
            :visible { netup <= 1024 }
            (rain-text-right
                :text "${ round( netup / 1, 0 ) } ðŸ¡¡"
            )
        )
        (box
        ; for kilo
            :visible { netup > 1024 && netup <= 1048576 }
            (rain-text-right
                :text "${ round( netup / 1024, 0 ) }á´· ðŸ¡¡"
            )
        )
        (box
        ; for mega
            :visible { netup > 1048576 }
            (rain-text-right
                :text "${ round( netup / 1048576, 0 ) }á´¹ ðŸ¡¡"
            )
        )
    )
)

(defwidget rain-net-graph-box []
    (overlay
        ; upside down
        (transform
        :scale-y "-100%"
        :translate-y "-100%"
            (rain-graph
            ; down graph
                :value "${ netdown }"
                :max "10485760"
            )
        )
            (rain-graph
            ; up graph
                :value "${ netup }"
                :max "10485760"
            )
    )
)
