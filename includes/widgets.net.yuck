(defpoll netdown
; network speed down
    :interval "2s"
    "/home/andrew/.config/eww/scripts/net-down.nu"
)

(defpoll netup
; network speed up
    :interval "2s"
    "/home/andrew/.config/eww/scripts/net-up.nu"
)

(defwidget rain-net-overlay []
    (overlay
        (rain-net-text)
        (rain-net-graph-box)
    )
)

