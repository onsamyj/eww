            :visible { netdown > 1024 && netdown <= 1048576 }
            (rain-text-right
                :text "${ round( netdown / 1024, 0 ) }á´· ðŸ¡£"
            )
        )
        (box
        ; for mega
            :visible { netdown > 1048576 }
            (rain-text-right
                :text "${ round( netdown / 1048576, 0 ) }á´¹ ðŸ¡£"
            )
        )

; up

        (box
        ; for bytes
            :visible { netup <= 1024 }
