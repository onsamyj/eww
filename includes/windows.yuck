; Rain Left for Chihiro

(defwindow rain-left
    :monitor "27E2G5/RVGN3HA002746"
    :geometry (geometry
        :x "0"
        :y "0"
        :width "500"
        :height "48px"
        :anchor "bottom left")
    :stacking "overlay"
    :exclusive true
    :focusable false
    (rain-left-overall)
)

(defwidget rain-left-overall []
    (box
        :orientation "horizontal"
        (rain-disks-one-overlay)
        (rain-disks-two-overlay)
        (rain-wallet-overlay)
        (rain-weather-overlay)
        (rain-clock-overlay)
        ; (rain-tasks)
    )
)

